# Server port (MentraOS SDK webhook target)
PORT=3000

# Push API port
PUSH_PORT=3001

# Push API bind address
# Use 127.0.0.1 (default) for local-only, or 0.0.0.0 for external access (e.g. WearOS/Tasker)
PUSH_BIND=127.0.0.1

# Optional auth token for Push API (required when PUSH_BIND is 0.0.0.0)
# Generate one with: openssl rand -hex 24
PUSH_TOKEN=

# MentraOS App package name (must match your MentraOS Developer Console)
PACKAGE_NAME=com.yourname.yourapp

# MentraOS API key from Developer Console
MENTRAOS_API_KEY=your_api_key_here

# OpenClaw Gateway WebSocket
OPENCLAW_WS_URL=ws://localhost:18789
OPENCLAW_GW_TOKEN=your_gateway_token_here

# Notification blocklist (comma-separated app names, case-insensitive)
# Example: NOTIF_BLOCKLIST=System UI,Google Play Store,Android System
NOTIF_BLOCKLIST=
